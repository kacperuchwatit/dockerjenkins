pipeline {
    agent any
    options {
        skipStagesAfterUnstable()
    }
    stages {
         stage('clone github repository') { 
            steps { 
                script{
                checkout scm
                }
            }
        }
        stage('build docker image') { 
            steps { 
                script{
                 sh 'sudo docker build -t cloudtask:wordpress .'
                }
            }
        }
        stage('Connect EC2') { 
            steps { 
                script{
                 sh 'aws ecr get-login-password --region us-west-1 | sudo docker login --username AWS --password-stdin 943696080604.dkr.ecr.us-west-1.amazonaws.com'
                }
            }
        }
        stage('push docker image to ECR') { 
            steps { 
                script{
                 sh 'sudo docker push 943696080604.dkr.ecr.us-west-1.amazonaws.com/bootcamp:wordpress'
                }
            }
        }
        stage('deploy on eks cluster') {
            steps {
                script{
                     sh 'kubectl apply -f firstdeploy.yaml'
                    }
                }
            }
        }
    }
